<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    tools:context="ripe.ripe.NavFragments.LeaderboardFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:id="@+id/leader_card"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/person_rank"
            android:textStyle="bold"
            android:textColor="@color/peach"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:textSize="50sp"
            android:layout_marginEnd="20dp"
            />

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="0dp"
            android:id="@+id/person_photo_container"
            android:layout_toEndOf="@+id/person_rank"
            android:layout_centerInParent="true"
            android:layout_marginEnd="20dp">

            <ImageView
                android:id="@+id/person_photo"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:scaleType="fitXY" />
        </android.support.v7.widget.CardView>

        <!--<ImageView-->
            <!--android:layout_width="65dp"-->
            <!--android:layout_height="65dp"-->
            <!--android:radius="8dp"-->
            <!--android:id="@+id/person_photo"-->
            <!--android:layout_toEndOf="@+id/person_rank"-->
            <!--android:layout_centerInParent="true"-->
            <!--android:layout_marginEnd="20dp"-->
            <!--/>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/person_name"
            android:layout_toEndOf="@+id/person_photo_container"
            android:layout_alignParentTop="true"
            android:textSize="30sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/person_email"
            android:layout_toEndOf="@+id/person_photo_container"
            android:layout_below="@+id/person_name"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>